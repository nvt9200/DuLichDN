                <span>@Model.DonGia</span>
                <span>@Model.LuotXem</span>
            </li>
            <li>
                <span style="font-size:20px">Mô tả</span>
                @Html.DisplayFor(model => model.MoTa)
            </li>
        </ul>
    </div>
</div>