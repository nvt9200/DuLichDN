@model DuLich_DH.Models.KhachSan

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "KhachSans", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 style="color: red; text-align:center">Tạo thông tin khách sạn mới</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
