@model DuLich_DH.Models.DiaDiem

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "DiaDiems", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 style="color: red; text-align:center">Tạo địa điểm</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">Tên địa điểm</span>
            <div class="col-md-10" style="width: 70%">
                @Html.EditorFor(model => model.TenDiaDiem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDiaDiem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Tên vị trí</span>
            <div class="col-md-10" style="width: 70%">
                @Html.DropDownList("MaViTri", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaViTri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Tên vị trí</span>
            <div class="col-md-10" style="width: 70%">
                <input type="file" name="fileimg" class="btn btn-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 70%">
                <input type="submit" value="Tạo" class="btn btn-success" />
            </div>
        </div>
    </div>
}