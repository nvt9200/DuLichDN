@model DuLich_DH.Models.QuanTri

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "QuanTris", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaQuanTri)

        <div class="form-group">
            <span class="control-label col-md-2">Tài khoản</span>
            <div class="col-md-10" style="width: 70%">
                <input type="text" name="TaiKhoan" class="form-control" value="@Model.TaiKhoan" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Mật khẩu</span>
            <div class="col-md-10" style="width: 70%">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Nhập lại mật khẩu</span>
            <div class="col-md-10" style="width: 70%">
                @Html.EditorFor(model => model.NhapLaiMatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NhapLaiMatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Ảnh đại diện</span>
            <div class="col-md-10" style="width: 70%">
                <input type="file" name="fileimg" class="btn btn-danger" value="@Model.AnhDaiDien" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 70%">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
            </div>
        </div>
    </div>
}

